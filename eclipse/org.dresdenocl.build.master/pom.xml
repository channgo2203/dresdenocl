	</properties>

	<repositories>
		<repository>
			<id>kepler</id>
			<url>${eclipse-repo.url}</url>
			<layout>p2</layout>
		</repository>

		<repository>
			<id>emftext</id>
			<url>http://www.emftext.org/update</url>
			<layout>p2</layout>
		</repository>
